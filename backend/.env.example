# AI手技モーションライブラリ - 環境設定

# データベース
DATABASE_URL=sqlite:///./aimotion.db

# ファイルストレージ
DATA_DIR=./data
UPLOAD_DIR=./data/uploads
TEMP_DIR=./data/temp
MAX_UPLOAD_SIZE=2147483648  # 2GB

# CORS設定
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8000"]

# AI処理設定
FRAME_EXTRACTION_FPS=15  # フレーム抽出レート（5=高速/低精度, 15=バランス, 30=低速/高精度）
YOLO_MODEL=yolov8n.pt
MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.8
MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.8

# SAM2器具追跡設定
USE_SAM2=True  # SAM2を有効化（高精度追跡: +2% Dice, -21% HD95）
SAM2_MODEL_TYPE=small  # tiny, small, base_plus, large

# 手袋検出設定
# 青い手袋の検出に問題がある場合は、これをTrueに設定してください
# True: 高性能な手袋検出器（GloveHandDetector）を使用
# False: 標準の改善版検出器を使用（デフォルト）
USE_ADVANCED_GLOVE_DETECTION=False

# 開発設定
DEBUG=True
RELOAD=True